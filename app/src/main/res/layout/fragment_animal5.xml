<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lecciones.Animal5Fragment"
    android:background="@drawable/fondo_paisaje5">

    <ImageView
        android:id="@+id/gato"
        android:layout_width="311dp"
        android:layout_height="374dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="58dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="42dp"
        android:layout_marginBottom="332dp"
        android:src="@drawable/gato" />

    <ImageButton
        android:id="@+id/imageButtonAnimal5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="145dp"
        android:backgroundTint="@color/colorTransparente"
        android:src="@drawable/button_escuchar"
        android:tooltipText="Reproducir" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="270dp"
        android:fontFamily="monospace"
        android:text="Gato"
        android:textColor="@color/colorBlanco"
        android:textSize="40dp" />

</RelativeLayout>